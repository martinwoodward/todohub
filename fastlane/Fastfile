default_platform(:ios)

platform :ios do
  desc "Build and upload to TestFlight"
  lane :beta do
    # Set up App Store Connect API Key from environment
    api_key = app_store_connect_api_key(
      key_id: ENV["ASC_KEY_ID"],
      issuer_id: ENV["ASC_ISSUER_ID"],
      key_filepath: ENV["ASC_KEY_PATH"],
      in_house: false
    )

    # Determine provisioning profile: use UUID from the install step (most reliable),
    # fall back to name from secret or default
    profile_uuid = ENV["PROVISIONING_PROFILE_UUID"].to_s
    profile_name = ENV["PROVISIONING_PROFILE_NAME"].to_s
    profile_name = "TodoHub App Store" if profile_name.empty?

    if profile_uuid.empty?
      UI.user_error!("PROVISIONING_PROFILE_UUID is not set. Ensure the 'Install Provisioning Profile' step exports it.")
    end

    # Build the app with manual signing for CI
    # CODE_SIGN_STYLE=Manual: Override the project's Automatic setting (CI can't do automatic)
    # CODE_SIGN_IDENTITY: Must be "Apple Distribution" to match the installed distribution cert
    # PROVISIONING_PROFILE: UUID of the installed profile (more reliable than name-based lookup)
    build_app(
      scheme: "TodoHub",
      project: "TodoHub.xcodeproj",
      configuration: "Release",
      export_method: "app-store",
      codesigning_identity: "Apple Distribution",
      export_options: {
        provisioningProfiles: {
          "com.martinwoodward.todohub" => profile_name
        }
      },
      output_directory: "build",
      output_name: "TodoHub.ipa",
      clean: true,
      xcargs: "DEVELOPMENT_TEAM='#{ENV["APPLE_TEAM_ID"]}' CODE_SIGN_STYLE=Manual PROVISIONING_PROFILE='#{profile_uuid}'"
    )

    # Upload to TestFlight
    upload_to_testflight(
      api_key: api_key,
      skip_waiting_for_build_processing: true,
      skip_submission: true
    )
  end
end
