default_platform(:ios)

platform :ios do
  desc "Build and upload to TestFlight"
  lane :beta do
    # Set up App Store Connect API Key from environment
    api_key = app_store_connect_api_key(
      key_id: ENV["ASC_KEY_ID"],
      issuer_id: ENV["ASC_ISSUER_ID"],
      key_filepath: ENV["ASC_KEY_PATH"],
      in_house: false
    )

    profile_name = ENV["PROVISIONING_PROFILE_NAME"].to_s
    profile_name = "TodoHub App Store" if profile_name.empty?

    # Switch ONLY the app target to manual signing.
    # This is critical: xcargs like PROVISIONING_PROFILE apply globally to ALL
    # targets including SPM packages (AppAuth), which breaks them. Using
    # update_code_signing_settings scopes the change to just our app target.
    update_code_signing_settings(
      use_automatic_signing: false,
      path: "TodoHub.xcodeproj",
      targets: ["TodoHub"],
      team_id: ENV["APPLE_TEAM_ID"],
      profile_name: profile_name,
      code_sign_identity: "Apple Distribution",
      bundle_identifier: "com.martinwoodward.todohub"
    )

    # Build the app
    build_app(
      scheme: "TodoHub",
      project: "TodoHub.xcodeproj",
      configuration: "Release",
      export_method: "app-store",
      codesigning_identity: "Apple Distribution",
      export_options: {
        provisioningProfiles: {
          "com.martinwoodward.todohub" => profile_name
        }
      },
      output_directory: "build",
      output_name: "TodoHub.ipa",
      clean: true,
      xcargs: "DEVELOPMENT_TEAM='#{ENV["APPLE_TEAM_ID"]}'"
    )

    # Upload to TestFlight
    upload_to_testflight(
      api_key: api_key,
      skip_waiting_for_build_processing: true,
      skip_submission: true
    )
  end
end
